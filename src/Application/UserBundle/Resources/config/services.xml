<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="brick.form.handler" class="Application\UserBundle\Form\Handler\BrickFormHandler" scope="request">
            <argument type="service" id="form.factory" />
            <argument type="service" id="request" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="application_user.profile.form.type" class="Application\UserBundle\Form\Type\ProfileFormType">
            <tag name="form.type" alias="application_user_profile" />
            <argument>%fos_user.model.user.class%</argument>
        </service>

        <service id="application.user_provider" class="Application\UserBundle\Security\Core\User\FOSUBUserProvider">
            <argument type="service" id="fos_user.user_manager" />
            <argument type="collection">
                <argument key="github">githubId</argument>
                <argument key="twitter">twitterId</argument>
                <argument key="sensiolabsconnect">sensiolabsconnectId</argument>
            </argument>
        </service>

    </services>

</container>
