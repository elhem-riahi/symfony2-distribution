{% extends "ApplicationSiteBundle::layout.html.twig" %}

{# META TAGS blocks #}
{% block meta_title_content %}Request password reset | Symfonyapplication.com{% endblock %}
{% block meta_description_content %}Did you loose your password? Request here a new one.{% endblock %}
{# END META TAGS blocks #}

{% block main %}

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1>{{ 'resetting.title'|trans({}, 'FOSUserBundle') }}</h1>

                <br><br>

                <p>
                    {% autoescape 'html' %}
                        {{ 'resetting.subtitle'|trans({}, 'FOSUserBundle')|raw }}
                    {% endautoescape %}
                </p>

                <br><br>

                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request security-form">
                    <div>
                        {% if invalid_username is defined %}
                            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
                        {% endif %}
                        <label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle')|raw }}</label>
                        <input type="text" id="username" name="username" required="required" />
                    </div>
                    <div>
                        <input type="submit" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    
{% endblock %}